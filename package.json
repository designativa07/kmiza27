{
  "name": "kmiza27-chatbot",
  "version": "1.0.0",
  "description": "Sistema completo de chatbot de futebol para WhatsApp",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:frontend:win": "cd frontend && npm run build:win",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start:prod",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "cd backend && npm run test",
    "test:e2e": "cd backend && npm run test:e2e",
    "deploy:check": "node scripts/check-deploy.js",
    "deploy:status": "node scripts/check-deploy-status.js",
    "deploy:health": "curl -f https://kmizabot.h4xd66.easypanel.host/health && curl -f https://kmizafrontend.h4xd66.easypanel.host/api/health",
    "status": "node scripts/check-system-status.js",
    "status:backend": "curl -s https://kmizabot.h4xd66.easypanel.host/health | jq .",
    "status:frontend": "curl -s https://kmizafrontend.h4xd66.easypanel.host/api/health | jq .",
    "status:watch": "watch -n 10 'npm run status'",
    "deploy:force": "node scripts/force-deploy.js",
    "deploy:verify": "node scripts/force-deploy.js",
    "cache:clear": "cd backend && npm cache clean --force && cd ../frontend && npm cache clean --force",
    "private:setup": "bash scripts/generate-deploy-keys.sh",
    "private:test": "ssh -T git@github.com",
    "docker:build": "docker-compose build --no-cache",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f --tail=50",
    "docker:status": "docker-compose ps",
    "rebuild": "bash scripts/rebuild-services.sh",
    "rebuild:backend": "bash scripts/rebuild-services.sh backend",
    "rebuild:frontend": "bash scripts/rebuild-services.sh frontend",
    "rebuild:win": "powershell -ExecutionPolicy Bypass -File scripts/rebuild-services.ps1",
    "rebuild:win:backend": "powershell -ExecutionPolicy Bypass -File scripts/rebuild-services.ps1 backend",
    "rebuild:win:frontend": "powershell -ExecutionPolicy Bypass -File scripts/rebuild-services.ps1 frontend"
  },
  "keywords": [
    "chatbot",
    "whatsapp",
    "futebol",
    "nestjs",
    "nextjs",
    "typescript",
    "postgresql",
    "openai"
  ],
  "author": "Kmiza27 Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmiza27/kmiza27-chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/kmiza27/kmiza27-chatbot/issues"
  },
  "homepage": "https://github.com/kmiza27/kmiza27-chatbot#readme",
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "axios": "^1.9.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.103.0",
    "pg": "^8.16.0"
  }
}
