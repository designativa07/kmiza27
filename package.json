{
  "name": "kmiza27-chatbot",
  "version": "1.0.0",
  "description": "Sistema completo de chatbot de futebol para WhatsApp",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start:prod",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "cd backend && npm run test",
    "test:e2e": "cd backend && npm run test:e2e",
    "deploy:check": "node scripts/check-deploy.js",
    "deploy:health": "curl -f https://kmizabot.h4xd66.easypanel.host/health && curl -f https://kmizafrontend.h4xd66.easypanel.host/api/health",
    "cache:clear": "cd backend && npm cache clean --force && cd ../frontend && npm cache clean --force"
  },
  "keywords": [
    "chatbot",
    "whatsapp",
    "futebol",
    "nestjs",
    "nextjs",
    "typescript",
    "postgresql",
    "openai"
  ],
  "author": "Kmiza27 Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmiza27/kmiza27-chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/kmiza27/kmiza27-chatbot/issues"
  },
  "homepage": "https://github.com/kmiza27/kmiza27-chatbot#readme",
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "axios": "^1.9.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.103.0",
    "pg": "^8.16.0"
  }
}
