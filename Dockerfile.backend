# üê≥ Dockerfile para Backend NestJS - Easypanel
FROM node:18-alpine

# Instalar depend√™ncias do sistema
RUN apk add --no-cache curl python3 make g++ git

# Definir diret√≥rio de trabalho
WORKDIR /app

# Quebrar cache - vers√£o 1.1 (BACKEND DEPLOY + GIT FIX)
RUN echo "Backend build version 1.1 - $(date)"

# Download direto do GitHub e c√≥pia espec√≠fica do backend
RUN cd /tmp && \
    git clone https://github.com/designativa07/kmiza27.git repo && \
    cp -r /tmp/repo/backend/. /app/ && \
    rm -rf /tmp/repo

# Instalar depend√™ncias
RUN npm ci --legacy-peer-deps

# Build da aplica√ß√£o NestJS
RUN npm run build

# Limpar cache do npm
RUN npm cache clean --force

# Expor porta
EXPOSE 3000

# Configurar vari√°veis de ambiente
ENV NODE_ENV=production
ENV PORT=3000
ENV DB_HOST=195.200.0.191
ENV DB_PORT=5433
ENV DB_USERNAME=postgres
ENV DB_PASSWORD=8F1DC9A7F9CE32C4D32E88A1C5FF7
ENV DB_DATABASE=kmiza27

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Comando para iniciar a aplica√ß√£o
CMD ["npm", "run", "start:prod"] 